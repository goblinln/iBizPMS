<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.pms.core.ibiz.mapper.IbzLibCaseStepsMapper">
	
	<!-- 无视图模式 -->
	<sql id="select" databaseId="mysql">
        <![CDATA[ SELECT t1.`CASE`, t1.`DESC`, t1.`EXPECT`, t1.`ID`, t1.`PARENT`, t1.`TYPE`, t11.`VERSION` FROM `zt_casestep` t1  LEFT JOIN `zt_case` t11 ON t1.`CASE` = t11.`ID`   ]]>
    </sql>

	
	<!-- 搜索条件 -->
	<sql id="searchMode" databaseId="mysql">
		<if test="srf.n_expect_like != null ">
            <bind name="bind_n_expect_like" value="'%' + srf.n_expect_like + '%'" />
            <![CDATA[ AND  t1.`EXPECT` like #{bind_n_expect_like,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_type_eq != null ">
			<![CDATA[ AND  t1.`TYPE` = #{srf.n_type_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_version_eq != null ">
			<![CDATA[ AND  t11.`VERSION` = #{srf.n_version_eq,jdbcType=INTEGER} ]]>
        </if>
		<if test="srf.n_parent_eq != null ">
			<![CDATA[ AND  t1.`PARENT` = #{srf.n_parent_eq,jdbcType=BIGINT} ]]>
        </if>
		<if test="srf.n_case_eq != null ">
			<![CDATA[ AND  t1.`CASE` = #{srf.n_case_eq,jdbcType=BIGINT} ]]>
        </if>
		<if test="ew!=null and ew.sqlSegment!=null and ew.sqlSegment!=''">
		AND ${ew.sqlSegment}
		</if>
	</sql>


    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->
	<select id="selectById"  resultMap="IbzLibCaseStepsResultMap" databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND T1.ID = #{id} ]]>
		</trim>
    </select>


    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="IbzLibCaseStepsResultMap" type="cn.ibizlab.pms.core.ibiz.domain.IbzLibCaseSteps" autoMapping="true">
		<id property="id" column="id" /><!--主键字段映射-->
		<result property="parent" column="parent" />
		<result property="ibizcase" column="case" />
            
		
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="ibzcase" javaType="cn.ibizlab.pms.core.ibiz.domain.IbzCase" column="case" select="cn.ibizlab.pms.core.ibiz.mapper.IbzCaseMapper.selectById" fetchType="lazy"></association>
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="ibzlibcasestepcs" javaType="cn.ibizlab.pms.core.ibiz.domain.IbzLibCaseSteps" column="parent" select="cn.ibizlab.pms.core.ibiz.mapper.IbzLibCaseStepsMapper.selectById" fetchType="lazy"></association>
    </resultMap>

	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_IBZ_LIBCASESTEPS_IBZ_CASE_CASE] -->
	 <select id="selectByIbizcase" resultMap="IbzLibCaseStepsResultMap"  databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND t1.`CASE`=#{id} ]]>
		</trim>
     </select>
	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_IBZ_LIBCASESTEPS_IBZ_LIBCASESTEPS_PARENT] -->
	 <select id="selectByParent" resultMap="IbzLibCaseStepsResultMap"  databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND t1.`PARENT`=#{id} ]]>
		</trim>
     </select>

    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.pms.core.ibiz.filter.IbzLibCaseStepsSearchContext"  resultMap="IbzLibCaseStepsResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="mysql">
		<![CDATA[ SELECT t1.`CASE`, t1.`DESC`, t1.`EXPECT`, t1.`ID`, t1.`PARENT`, t1.`TYPE`, t11.`VERSION` FROM `zt_casestep` t1  LEFT JOIN `zt_case` t11 ON t1.`CASE` = t11.`ID`   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectQueryByDefault"  parameterType="cn.ibizlab.pms.core.ibiz.filter.IbzLibCaseStepsSearchContext" resultMap="IbzLibCaseStepsResultMap">
		<include refid="Default" />
	</select>

    <!--数据查询[View]-->
    <sql id="View" databaseId="mysql">
		<![CDATA[ SELECT t1.`CASE`, t1.`DESC`, t1.`EXPECT`, t1.`ID`, t1.`PARENT`, t1.`TYPE`, t11.`VERSION` FROM `zt_casestep` t1  LEFT JOIN `zt_case` t11 ON t1.`CASE` = t11.`ID`   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectQueryByView"  parameterType="cn.ibizlab.pms.core.ibiz.filter.IbzLibCaseStepsSearchContext" resultMap="IbzLibCaseStepsResultMap">
		<include refid="View" />
	</select>

</mapper>


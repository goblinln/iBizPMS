<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.pms.core.zentao.mapper.UserTplMapper">
	
	<!-- 无视图模式 -->
	<sql id="select" databaseId="mysql">
        <![CDATA[ SELECT t1.`ACCOUNT`, t1.`CONTENT`, t1.`DEPT`, t1.`ID`, t1.`ORG`, t1.`PUBLIC`, t1.`TITLE`, t1.`TYPE`, t1.`UPDATEBY` FROM `zt_usertpl` t1   ]]>
    </sql>

	
	<!-- 搜索条件 -->
	<sql id="searchMode" databaseId="mysql">
		<if test="srf.n_title_like != null ">
            <bind name="bind_n_title_like" value="'%' + srf.n_title_like + '%'" />
            <![CDATA[ AND  t1.`TITLE` like #{bind_n_title_like,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_type_eq != null ">
			<![CDATA[ AND  t1.`TYPE` = #{srf.n_type_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_public_eq != null ">
			<![CDATA[ AND  t1.`PUBLIC` = #{srf.n_public_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="ew!=null and ew.sqlSegment!=null and ew.sqlSegment!=''">
		AND ${ew.sqlSegment}
		</if>
	</sql>


    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->
	<select id="selectById"  resultMap="UserTplResultMap" databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND T1.ID = #{id} ]]>
		</trim>
    </select>


    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="UserTplResultMap" type="cn.ibizlab.pms.core.zentao.domain.UserTpl" autoMapping="true">
		<id property="id" column="id" /><!--主键字段映射-->
		<result property="ibizpublic" column="public" />
            
		
    </resultMap>


    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.UserTplSearchContext"  resultMap="UserTplResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
     </select>

    <!--数据集合[MyUserTpl]-->
	 <select id="searchMyUserTpl"  parameterType="cn.ibizlab.pms.core.zentao.filter.UserTplSearchContext"  resultMap="UserTplResultMap">
         select t1.* from (
                <include refid="MyUserTpl" />
         )t1
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="mysql">
		<![CDATA[ SELECT t1.`ACCOUNT`, t1.`CONTENT`, t1.`DEPT`, t1.`ID`, t1.`ORG`, t1.`PUBLIC`, t1.`TITLE`, t1.`TYPE`, t1.`UPDATEBY` FROM `zt_usertpl` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<if test="true">
			<![CDATA[ AND ( ( t1.`PUBLIC` = '1'  OR  t1.`ACCOUNT` =  #{srf.webcontext.account} )  AND  t1.`TYPE` =  #{srf.webcontext.type} ) ]]>
			</if>
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectQueryByDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.UserTplSearchContext" resultMap="UserTplResultMap">
		<include refid="Default" />
	</select>

    <!--数据查询[MyUserTpl]-->
    <sql id="MyUserTpl" databaseId="mysql">
		<![CDATA[ SELECT t1.`ACCOUNT`, t1.`CONTENT`, t1.`DEPT`, t1.`ID`, t1.`ORG`, t1.`PUBLIC`, t1.`TITLE`, t1.`TYPE`, t1.`UPDATEBY` FROM `zt_usertpl` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<if test="true">
			<![CDATA[ AND ( t1.`ACCOUNT` =  #{srf.sessioncontext.srfloginname} ) ]]>
			</if>
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectQueryByMyUserTpl"  parameterType="cn.ibizlab.pms.core.zentao.filter.UserTplSearchContext" resultMap="UserTplResultMap">
		<include refid="MyUserTpl" />
	</select>

    <!--数据查询[View]-->
    <sql id="View" databaseId="mysql">
		<![CDATA[ SELECT t1.`ACCOUNT`, t1.`CONTENT`, t1.`DEPT`, t1.`ID`, t1.`ORG`, t1.`PUBLIC`, t1.`TITLE`, t1.`TYPE`, t1.`UPDATEBY` FROM `zt_usertpl` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectQueryByView"  parameterType="cn.ibizlab.pms.core.zentao.filter.UserTplSearchContext" resultMap="UserTplResultMap">
		<include refid="View" />
	</select>

</mapper>


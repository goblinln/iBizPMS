<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.pms.core.zentao.mapper.StorySpecMapper">
	
	<!-- 无视图模式 -->
	<sql id="select" databaseId="mysql">
        <![CDATA[ SELECT t1.`CREATEBY`, t1.`DEPT`, t1.`DEPTNAME`, concat(t1.`STORY`,'__',t1.`VERSION`) AS `ID`, t1.`ORG`, t1.`ORGNAME`, t1.`SPEC`, t1.`STORY`, t1.`TITLE`, t1.`UPDATEBY`, t1.`VERIFY`, t1.`VERSION` FROM `zt_storyspec` t1   ]]>
    </sql>

	
	<!-- 搜索条件 -->
	<sql id="searchMode" databaseId="mysql">
		<if test="srf.n_id_eq != null ">
			<![CDATA[ AND  concat(t1.`STORY`,'__',t1.`VERSION`) = #{srf.n_id_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_title_like != null ">
            <bind name="bind_n_title_like" value="'%' + srf.n_title_like + '%'" />
            <![CDATA[ AND  t1.`TITLE` like #{bind_n_title_like,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_version_eq != null ">
			<![CDATA[ AND  t1.`VERSION` = #{srf.n_version_eq,jdbcType=INTEGER} ]]>
        </if>
		<if test="srf.n_version_noteq != null ">
			<![CDATA[ AND  t1.`VERSION` <> #{srf.n_version_noteq,jdbcType=INTEGER} ]]>
        </if>
		<if test="srf.n_story_eq != null ">
			<![CDATA[ AND  t1.`STORY` = #{srf.n_story_eq,jdbcType=BIGINT} ]]>
        </if>
		<if test="ew!=null and ew.sqlSegment!=null and ew.sqlSegment!=''">
		AND ${ew.sqlSegment}
		</if>
	</sql>


    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->
	<select id="selectById"  resultMap="StorySpecResultMap" databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND T1.ID = #{id} ]]>
		</trim>
    </select>


    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="StorySpecResultMap" type="cn.ibizlab.pms.core.zentao.domain.StorySpec" autoMapping="true">
		<result property="story" column="story" />
            
		
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="ztstory" javaType="cn.ibizlab.pms.core.zentao.domain.Story" column="story" select="cn.ibizlab.pms.core.zentao.mapper.StoryMapper.selectById" fetchType="lazy"></association>
    </resultMap>

	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_ZT_STORYSPEC_ZT_STORY_STORY] -->
	 <select id="selectByStory" resultMap="StorySpecResultMap"  databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND t1.`STORY`=#{id} ]]>
		</trim>
     </select>

    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.StorySpecSearchContext"  resultMap="StorySpecResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
     </select>

    <!--数据集合[Version]-->
	 <select id="searchVersion"  parameterType="cn.ibizlab.pms.core.zentao.filter.StorySpecSearchContext"  resultMap="StorySpecResultMap">
         select t1.* from (
                <include refid="Version" />
         )t1
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="mysql">
		<![CDATA[ SELECT t1.`CREATEBY`, t1.`DEPT`, t1.`DEPTNAME`, concat(t1.`STORY`,'__',t1.`VERSION`) AS `ID`, t1.`ORG`, t1.`ORGNAME`, t1.`SPEC`, t1.`STORY`, t1.`TITLE`, t1.`UPDATEBY`, t1.`VERIFY`, t1.`VERSION` FROM `zt_storyspec` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.StorySpecSearchContext" resultMap="StorySpecResultMap">
		<include refid="Default" />
	</select>

    <!--数据查询[Version]-->
    <sql id="Version" databaseId="mysql">
		<![CDATA[ SELECT concat(t1.`STORY`,'__',t1.`VERSION`) AS `ID`, t1.`STORY`, t1.`VERSION`, CONCAT('#',t1.`version`) as `TITLE` FROM `zt_storyspec` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectVersion"  parameterType="cn.ibizlab.pms.core.zentao.filter.StorySpecSearchContext" resultMap="StorySpecResultMap">
		<include refid="Version" />
	</select>

    <!--数据查询[View]-->
    <sql id="View" databaseId="mysql">
		<![CDATA[ SELECT t1.`CREATEBY`, t1.`DEPT`, t1.`DEPTNAME`, concat(t1.`STORY`,'__',t1.`VERSION`) AS `ID`, t1.`ORG`, t1.`ORGNAME`, t1.`SPEC`, t1.`STORY`, t1.`TITLE`, t1.`UPDATEBY`, t1.`VERIFY`, t1.`VERSION` FROM `zt_storyspec` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectView"  parameterType="cn.ibizlab.pms.core.zentao.filter.StorySpecSearchContext" resultMap="StorySpecResultMap">
		<include refid="View" />
	</select>

</mapper>


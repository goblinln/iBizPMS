<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.pms.core.zentao.mapper.GroupPrivMapper">
	
	<!-- 无视图模式 -->
	<sql id="select" databaseId="mysql">
        <![CDATA[ SELECT t1.`GROUP`, concat(t1.`GROUP`,'__',t1.`MODULE`,'__',t1.`METHOD`) AS `ID`, t1.`METHOD`, t1.`MODULE` FROM `zt_grouppriv` t1   ]]>
    </sql>

	
	<!-- 搜索条件 -->
	<sql id="searchMode" databaseId="mysql">
		<if test="ew!=null and ew.sqlSegment!=null and ew.sqlSegment!=''">
		AND ${ew.sqlSegment}
		</if>
	</sql>


    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->
	<select id="selectById"  resultMap="GroupPrivResultMap" databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND T1.ID = #{id} ]]>
		</trim>
    </select>


    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="GroupPrivResultMap" type="cn.ibizlab.pms.core.zentao.domain.GroupPriv" autoMapping="true">
            
		
    </resultMap>


    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.GroupPrivSearchContext"  resultMap="GroupPrivResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="mysql">
		<![CDATA[ SELECT t1.`GROUP`, concat(t1.`GROUP`,'__',t1.`MODULE`,'__',t1.`METHOD`) AS `ID`, t1.`METHOD`, t1.`MODULE` FROM `zt_grouppriv` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.GroupPrivSearchContext" resultMap="GroupPrivResultMap">
		<include refid="Default" />
	</select>

    <!--数据查询[View]-->
    <sql id="View" databaseId="mysql">
		<![CDATA[ SELECT t1.`GROUP`, concat(t1.`GROUP`,'__',t1.`MODULE`,'__',t1.`METHOD`) AS `ID`, t1.`METHOD`, t1.`MODULE` FROM `zt_grouppriv` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectView"  parameterType="cn.ibizlab.pms.core.zentao.filter.GroupPrivSearchContext" resultMap="GroupPrivResultMap">
		<include refid="View" />
	</select>

</mapper>


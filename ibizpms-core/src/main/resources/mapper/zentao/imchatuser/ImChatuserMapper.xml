<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.pms.core.zentao.mapper.ImChatuserMapper">
	
	<!-- 无视图模式 -->
	<sql id="select" databaseId="mysql">
        <![CDATA[ SELECT t1.`CATEGORY`, t1.`CGID`, t1.`FREEZE`, t1.`HIDE`, t1.`ID`, t1.`JOIN`, t1.`MUTE`, t1.`ORDER`, t1.`QUIT`, t1.`STAR`, t1.`USER` FROM `zt_im_chatuser` t1   ]]>
    </sql>

	
	<!-- 搜索条件 -->
	<sql id="searchMode" databaseId="mysql">
		<if test="srf.n_freeze_eq != null ">
			<![CDATA[ AND  t1.`FREEZE` = #{srf.n_freeze_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_star_eq != null ">
			<![CDATA[ AND  t1.`STAR` = #{srf.n_star_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_hide_eq != null ">
			<![CDATA[ AND  t1.`HIDE` = #{srf.n_hide_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="srf.n_mute_eq != null ">
			<![CDATA[ AND  t1.`MUTE` = #{srf.n_mute_eq,jdbcType=VARCHAR} ]]>
        </if>
		<if test="ew!=null and ew.sqlSegment!=null and ew.sqlSegment!=''">
		AND ${ew.sqlSegment}
		</if>
	</sql>


    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->
	<select id="selectById"  resultMap="ImChatuserResultMap" databaseId="mysql">
        <include refid="select" />
		<trim prefix="where" prefixOverrides="and">
			<![CDATA[ AND T1.ID = #{id} ]]>
		</trim>
    </select>


    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="ImChatuserResultMap" type="cn.ibizlab.pms.core.zentao.domain.ImChatuser" autoMapping="true">
		<id property="id" column="id" /><!--主键字段映射-->
            
		
    </resultMap>


    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.ImChatuserSearchContext"  resultMap="ImChatuserResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="mysql">
		<![CDATA[ SELECT t1.`CATEGORY`, t1.`CGID`, t1.`FREEZE`, t1.`HIDE`, t1.`ID`, t1.`JOIN`, t1.`MUTE`, t1.`ORDER`, t1.`QUIT`, t1.`STAR`, t1.`USER` FROM `zt_im_chatuser` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectDefault"  parameterType="cn.ibizlab.pms.core.zentao.filter.ImChatuserSearchContext" resultMap="ImChatuserResultMap">
		<include refid="Default" />
	</select>

    <!--数据查询[View]-->
    <sql id="View" databaseId="mysql">
		<![CDATA[ SELECT t1.`CATEGORY`, t1.`CGID`, t1.`FREEZE`, t1.`HIDE`, t1.`ID`, t1.`JOIN`, t1.`MUTE`, t1.`ORDER`, t1.`QUIT`, t1.`STAR`, t1.`USER` FROM `zt_im_chatuser` t1   ]]>
		<trim prefix="where" prefixOverrides="and">
			<include refid="searchMode" />
		</trim>
    </sql>
	
	<select id="selectView"  parameterType="cn.ibizlab.pms.core.zentao.filter.ImChatuserSearchContext" resultMap="ImChatuserResultMap">
		<include refid="View" />
	</select>

</mapper>


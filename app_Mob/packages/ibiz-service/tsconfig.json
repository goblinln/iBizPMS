{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2020"],
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2020",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
